<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblnum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Numero 1:" />

    <TextView
        android:id="@+id/lblnum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtnum1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="Numero 2:" />

    <EditText
        android:id="@+id/txtnum1"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblnum1"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="90dp"/>



    <EditText
        android:id="@+id/txtnum2"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtnum1"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/spnOpciones"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="231dp"
        android:entries="@array/spnopciones">

    </Spinner>

    <Button
        android:id="@+id/btncalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblhelpFacto"
        android:layout_marginTop="58dp"
        android:text="Calcular" />

    <TextView
        android:id="@+id/lblrespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btncalcular"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="27dp"
        android:text="Respuesta: " />

    <TextView
        android:id="@+id/lblhelpPorcen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="150dp"
        android:text="Caso porcentaje: Numero 1= pon el valor principal, y en el numero 2 pon el porcentaje" />

    <TextView
        android:id="@+id/lblhelpExpo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblhelpPorcen"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="18dp"
        android:text="Caso Exponente: Numero 1= pon el valor principal, y en el numero 2 pon el porcentaje" />

    <TextView
        android:id="@+id/lblhelpFacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblhelpExpo"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="18dp"
        android:text="Caso Factorial y Raiz: Repite el numero en ambos cuadros de texto." />


</RelativeLayout>